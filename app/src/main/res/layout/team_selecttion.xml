<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background2"
    android:padding="16dp">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titan_one"
        android:text="Select Team 1"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#7AEBECF3"
        android:columnCount="2"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading">

        <ImageView
            android:id="@+id/csk"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/csk" />

        <ImageView
            android:id="@+id/mi"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/mi" />

        <ImageView
            android:id="@+id/rcb"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/rcb" />

        <ImageView
            android:id="@+id/dc"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/dc" />

        <ImageView
            android:id="@+id/gt"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/gt" />

        <ImageView
            android:id="@+id/kkr"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/kkr" />

        <ImageView
            android:id="@+id/lsg"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/lsg" />

        <ImageView
            android:id="@+id/pk"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/pk" />

        <ImageView
            android:id="@+id/rr"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/rr" />

        <ImageView
            android:id="@+id/srh"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/srh" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titan_one"
            android:text="Team1 : "
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/team_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/titan_one"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titan_one"
            android:text="Team2 : "
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/team_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/titan_one"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:fontFamily="@font/titan_one"
        android:text="Start"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border"
        android:fontFamily="@font/titan_one"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>